{
    "timezone": "Australia/Sydney",
    "loggers": {
        "accessLog": {
            "transports": [
                {
                    "type": "console",
                    "options": {
                        "level": "verbose",
                        "format": "#!jsv: log.format.combine(log.format.colorize(), log.format.simple())"
                    }
                }
            ]
        }
    },
    "koa": {
        "keys": [
            "cookie",
            "secret",
            "to be replaced"
        ],
        "httpPort": 3000
    },
    "middlewares": [
        [
            "favicon",
            "public/favicon.ico"
        ],
        [
            "accessLog",
            {
                "logger": "accessLog"
            }
        ],
        [
            "@koa/cors",
            {
                "origin": "*"
            }
        ],
        "koa-compress",
        "koa-etag"
    ],
    "routing": {
        "/": "index.home"
    }
}